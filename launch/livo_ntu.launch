<launch>
  <!-- Launch file for velodyne16 VLP-16 LiDAR -->

    <arg name="rviz" default="true" />
    <arg name="play_enable" default="true"/>
    <arg name="autorun"     default="false"/>
    <param name="use_sim_time" value="true"/>
    <arg  name="bag_file" default="/xos/catkin_ws/src/bagfiles/nya_01/nya_01_voxblox.bag"/>

    <rosparam command="load" file="$(find sr_livo)/config/ntu.yaml" />

    <param name="debug_output" type="bool" value="0"/>
    <param name="output_path" type="string" value="$(find sr_livo)/output"/>
    <node pkg="sr_livo" type="livo_node" name="livo_node" output="screen" /> 

    <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sr_livo)/rviz_cfg/visualization.rviz" />
    </group>

    <group if="$(arg play_enable)">
    <node required="$(arg autorun)" pkg="rosbag" type="play" name="rosbag_player"
      args="--clock $(arg bag_file) -r 1.0 -d 1.0">
      </node>
      </group>

</launch>
